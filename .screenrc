# screen commands
autodetach on

# no shell title
shelltitle ""

# no startup message
startup_message off

# no bells
vbell off

# 5000 line scrollback buffer
defscrollback 5000

# simple status line
# [n screen-title] [...]             [hh:mm]
hardstatus alwayslastline " %w %=%c "

# scrollback in terminal emulator
termcapinfo xterm* ti@:te@

