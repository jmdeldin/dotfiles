" Change access keys to <C-Key> from <C-key>
set! ui.key.contentAccess=3

" Prevent auto-focusing fields to stay in Normal mode
set focuscontent

" use Firefox's default popup behavior (new window)
set popups=2

set editor='bash -lc "/opt/local/bin/mvim -c \'set ft=xml\' -f \$*" mvim '

" No bells
set visualbell
hi Bell display: none;

" RSS button
javascript <<EOF
(function(){
// http://tuxtraining.com/2009/04/13/put-the-rss-button-in-vimperators-display-bar
var feedPanel = document.createElement("statusbarpanel");
feedPanel.setAttribute("id", "feed-panel-clone");
feedPanel.appendChild(document.getElementById("feed-button"));
feedPanel.firstChild.setAttribute("style", "padding: 0; max-height: 16px;");
document.getElementById("status-bar")
.insertBefore(feedPanel, document.getElementById("security-button"));
})();
EOF

" vim:set ft=vim:
